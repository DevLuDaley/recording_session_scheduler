<!-- EDIT FORM -->
<!-- DISPLAY Zat.ALL -->


<div>
    <h2> Engineer Information </h2>
    <h3> Engineer: <%= @engineer.name.capitalize %> <button><%= link_to 'Edit Engineer', edit_engineer_path %></button> </h3>
    <br></h3>
    <% if @engineer.recording_sessions.blank? %>
    <h2>There are currently no recording sessions scheduled.</h2>
    <% else %>
    <h2> Scheduled Recording Sessions</h2>
    <!-- <br> -->

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Artist</th>
                <th>Studio</th>
                <th>Location</th>
                <th>Recording Session Date</th>
                <th>Complete</th>
                <th>Cancel</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <% @engineer.recording_sessions.each do |c| %>
        <div class="well">
            <tbody>
                <tr>
                    <td><%= link_to c.id, recording_session_path(c)%></td>
                    <td><%= link_to c.artist.name, artist_path(c.artist)%></td>
                    <td><%= link_to c.studio.name.capitalize, studio_path(c.studio)%></td>
                    <td><%= link_to c.studio.location.capitalize, studio_path(c.studio)%></td>
                    <td><%= link_to c.appointment_date.time.to_formatted_s(:rfc822), recording_session_path(c)%></td>
                    <td><%= c.status %></td>
                    <td><%= link_to "Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this recording session?' } %>
                    </td>

                </tr>

                <% end %>
                <% end %>
                        </tbody>
                        </table>

                     <p></p>

            <!-- END OF EDIT FORM -->









            <!-- URL LINKS -->

            <br>
            <p>
                <%= link_to 'Create New Session', new_recording_session_path %> |
                <%= link_to 'Create New Studio', new_studio_path %> |
                <%= link_to 'Create New Artist', new_artist_path %> |
                <%= link_to 'Create New Engineer', new_engineer_path %>
            </p>