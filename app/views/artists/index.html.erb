<!-- DISPLAY recording_session.ALL -->
<section class="main">

    <%= link_to 'logout', destroy_user_session_path, method: :delete %>


    <% if @artists.blank? %>
    <h2>There are currently no artists.</h2>
    <% else %>
    <h2>Current Artists</h1>
        <br>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Engineer</th>
                    <th>Artist</th>
                    <th>Studio</th>
                    <th>Location</th>
                    <th>Recording Session Date</th>
                    <th>Complete</th>
                    <th>Cancel</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <% @artists.each do |c| %>
            <div class="well">
                <tbody>
                    <tr>
                        <td><%= link_to c.id, recording_session_path(c)%></td>
                        <td><%= link_to c.name.capitalize, engineer_path(c) %></a></td>
                        <td

                            <%= link_to "Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this recording session?' } %>
                        </td>

                    </tr>

                    <% end %>
                </tbody>
        </table>
        <%= link_to "LINK to ALL SESSIONS via (index_partial) ", recording_sessions_path(@recording_session), :class => 'btn btn-default' %>
        </div>
        <p> <% end %> </p>

        <!-- END OF EDIT FORM -->