<body>

    <!-- RECORDING SESSION INFO -->
    <div>
        <h2> Studio Information </h2>
        <h3> Studio: <%= @studio.name.capitalize %></h3>
        <h3> Location: <%= @studio.location.capitalize %></h3>
        <% if @studio.recording_sessions.blank? %>
        <h2>There are currently no recording sessions scheduled.</h2>
        <% else %>
        <h2>Scheduled Sessions</h1>
            <br>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Session Date</th>
                        <th>Artist</th>
                        <th>Engineer</th>
                        <th>Complete</th>
                        <th>Cancel</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <% @studio.recording_sessions.each do |c| %>
                <tbody>
                    <tr>
                        <td><a href="/engineers/@engineer_id page/:id"><%= c.id %></a></td>
                        <td><a href="/recording_sessions/:id/edit"><%= c.appointment_date.time.to_formatted_s(:rfc822) %></a></td>
                        <td><a href="/artists/:artist_id"><%= c.artist.name.capitalize %></a></td>
                        <td><a href="/engineers/@engineer_id page/:id"><%= c.engineer.name.capitalize %></a></td>
                        <td><a href="/recording_sessions/:id/edit"><%= c.status %></a></td>
                        <td><a
                                href="/recording_sessions/@engineer_id"><%= link_to "Delete", c, method: :delete, data: { confirm: 'Are you sure you want to delete this recording session?' } %></a>
                        </td>

                    </tr>
                    <% end %>
                </tbody>
            </table>

            <p> <% end %> </p>

            <!-- END OF EDIT FORM -->